@model List<CategoryDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<a asp-action="Create" class="btn btn-outline-primary">Ekle</a>

<table class="table table-hover table-bordered w-75 m-sm-3 table-sm mx-auto">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>İşlemler
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-success">Güncelle</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
    }

</table>
